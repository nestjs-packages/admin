<!DOCTYPE html>
<html class="min-h-screen bg-gray-100 js-focus-visible" lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- NestJS Admin CSS -->
    <link rel="stylesheet" href="/css/tailwind.css" />

    {% block stylesheets %}

    {% endblock %}

    <title>
      {{ siteName }}
    </title>
  </head>
  <body class="{{ pageId }} flex flex-col min-h-screen">
    {% include 'blocks/header.njk' %}

    {% if backLink %}
      <nav class="navbar admin-subheader">
        <a href="{{ backLink }}">
          <button type="button" class="btn btn-outline-secondary btn-sm">
            &lsaquo; Back
          </button>
        </a>
      </nav>
    {% endif %}

    {% for item in messages %}
      <div class="alert alert-success">
        {{ item }}
      </div>
    {% endfor %}

    {% block main %}

    {% endblock %}
  </body>
</html>
